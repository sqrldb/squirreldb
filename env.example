# SquirrelDB Environment Configuration
# Copy to .env and modify as needed

# Backend: postgres or sqlite
SQRL_BACKEND=sqlite

# Server binding
SQRL_HOST=0.0.0.0

# Ports
SQRL_PORT_HTTP=8080
SQRL_PORT_ADMIN=8081
SQRL_PORT_TCP=8082
SQRL_PORT_MCP=8083
SQRL_PORT_STORAGE=9000

# PostgreSQL (when SQRL_BACKEND=postgres)
DATABASE_URL=postgres://postgres:postgres@localhost/squirreldb
SQRL_PG_MAX_CONNECTIONS=20

# SQLite (when SQRL_BACKEND=sqlite)
SQRL_SQLITE_PATH=/app/data/squirreldb.db

# Authentication
SQRL_AUTH_ENABLED=false
SQRL_ADMIN_TOKEN=

# MCP protocol
SQRL_MCP_ENABLED=false

# Rate limits
SQRL_LIMIT_CONNECTIONS_PER_IP=100
SQRL_LIMIT_RPS=100
SQRL_LIMIT_BURST=50
SQRL_LIMIT_QUERY_TIMEOUT=30000
SQRL_LIMIT_CONCURRENT_QUERIES=10
SQRL_LIMIT_MESSAGE_SIZE=16777216

# Object Storage (S3-compatible)
SQRL_STORAGE_ENABLED=false
SQRL_STORAGE_PATH=/app/data/storage
SQRL_STORAGE_REGION=us-east-1

# In-Memory Cache (Redis-compatible)
SQRL_CACHE_ENABLED=false
SQRL_CACHE_PORT=6379
SQRL_CACHE_MAX_MEMORY=256mb
SQRL_CACHE_EVICTION=lru
SQRL_CACHE_DEFAULT_TTL=0
SQRL_CACHE_SNAPSHOT_ENABLED=false
SQRL_CACHE_SNAPSHOT_PATH=/app/data/cache.snapshot
SQRL_CACHE_SNAPSHOT_INTERVAL=300

# Logging
SQRL_LOG_LEVEL=info
RUST_LOG=info
